import os
import sys

port = sys.argv.pop()
self_path = sys.argv.pop(0)

os.chdir(os.path.dirname(self_path))

if os.name == 'nt':
    bin = "bin\\fsharp"
else:
    bin = "bin/fsharp"

os.execlp(bin, bin, port)
